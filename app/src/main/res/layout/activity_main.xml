<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/answersGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/answerImage1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/placeholder_image"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="70dp"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/answerButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opci贸n 1"
                app:layout_constraintTop_toBottomOf="@id/answerImage1"
                app:layout_constraintStart_toStartOf="@id/answerImage1"
                android:layout_marginVertical="90dp"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/answerImage2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/placeholder_image"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/answerButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opci贸n 2"
                app:layout_constraintTop_toBottomOf="@id/answerImage2"
                app:layout_constraintStart_toStartOf="@id/answerImage2"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/answerImage3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/placeholder_image"
                app:layout_constraintTop_toBottomOf="@id/answerButton1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/answerButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opci贸n 3"
                app:layout_constraintTop_toBottomOf="@id/answerImage3"
                app:layout_constraintStart_toStartOf="@id/answerImage3"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/answerImage4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/placeholder_image"
                app:layout_constraintTop_toBottomOf="@id/answerButton2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/answerButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opci贸n 4"
                app:layout_constraintTop_toBottomOf="@id/answerImage4"
                app:layout_constraintStart_toStartOf="@id/answerImage4"
                android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temps: 30"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/answerButton3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
